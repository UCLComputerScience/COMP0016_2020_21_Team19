if [ ! -d ".venv" ] 
then
    python3 -n venv .venv
    source .venv/bin/activate
    pip install mkdocs
fi
source .venv/bin/activate

rm -rf build/
rm -rf site/static/guide/

cd manual
mkdocs build
mv -f guide/ ../site/static/guide/
cd ..

cd site
hugo -D
cd ..

read -p "Enter UCL CS Username: " uname
rsync -av --delete-before -e ssh ./build/. $uname@knuckles.cs.ucl.ac.uk:/cs/student/www/2020/group19/